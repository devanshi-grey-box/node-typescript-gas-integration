{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "rootDir": "./src",
      "outDir": "./dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": [
      "src/node/**/*",
      "src/shared/**/*"
    ],
    "exclude": [
      "src/gas",
      "src/types/global.d.ts",
      "build",
      "node_modules"
    ]
  }
  